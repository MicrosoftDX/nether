{
    "version": "0.1.0",
    "windows": {
        "command": "powershell",
        "args": [
            "-NoProfile",
            "-ExecutionPolicy",
            "ByPass"
        ],
        "tasks": [
            {
                "taskName": "build",
                "args": [
                    "${workspaceRoot}\\build.ps1",
                    "-NoRestore"
                ],
                "suppressTaskName": true,
                "isBuildCommand": true,
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "test",
                "args": [
                    "${workspaceRoot}\\test.ps1"
                ],
                "suppressTaskName": true,
                "isTestCommand": true,
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "restore",
                "args": [
                    "dotnet",
                    "restore"
                ],
                "suppressTaskName": true
            }
        ]
    },
    "linux": {
        "command": "bash",
        "tasks": [
            {
                "taskName": "build",
                "args": [
                    "${workspaceRoot}/build.sh",
                    "--no-restore"
                ],
                "suppressTaskName": true,
                "isBuildCommand": true,
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "test",
                "args": [
                    "${workspaceRoot}/test.sh"
                ],
                "suppressTaskName": true,
                "isTestCommand": true,
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "restore",
                "args": [
                    "dotnet",
                    "restore"
                ]
            }
        ]
    },
    "osx": {
        "command": "sh",
        "tasks": [
            {
                "taskName": "build",
                "args": [
                    "${workspaceRoot}/build.sh",
                    "--no-restore"
                ],
                "suppressTaskName": true,
                "isBuildCommand": true,
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "test",
                "args": [
                    "${workspaceRoot}/test.sh"
                ],
                "suppressTaskName": true,
                "isTestCommand": true,
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "restore",
                "args": [
                    "dotnet",
                    "restore"
                ]
            }
        ]
    },
    "isShellCommand": true,
    "args": []
}